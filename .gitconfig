[credential "https://github.com"]
	helper = 
	helper = !/usr/bin/gh auth git-credential
[credential "https://gist.github.com"]
	helper = 
	helper = !/usr/bin/gh auth git-credential
[user]
	email = rpopic2@gmail.com
	name = rpopic2
[core]
	editor = vi
 	pager = delta
[init]
	defaultBranch = main
[interactive]
	diffFilter = delta --color-only
[add.interactive]
	useBuiltin = false # required for git 2.37.0

[delta]
	navigate = true    # use n and N to move between diff sections
	light = true      # set to true if you're in a terminal w/ a light background color (e.g. the default macOS terminal)

[merge]
	conflictstyle = diff3

[diff]
	colorMoved = default
[alias]
    a = add
    c = commit
    ca = commit -a
    d = diff
    f = fetch
    l = log
    s = status
    sw = switch
    m = merge
    p = push
    pu = push
    pl = pull
    r = reset
    rs = reset --soft
    rh = reset --hard
    rsh = reset --soft HEAD~1
    rhh = reset --hard HEAD~1
